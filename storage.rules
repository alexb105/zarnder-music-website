rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Album art - public read, authenticated write
    match /album-art/{allPaths=**} {
      // Anyone can read album art (for public website)
      allow read: if true;
      
      // Only authenticated users can upload/delete album art
      allow write: if request.auth != null;
    }
    
    // User uploads (if you add user-specific uploads later)
    match /users/{userId}/{allPaths=**} {
      // Users can only access their own files
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
