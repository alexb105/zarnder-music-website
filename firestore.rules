rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Releases collection - public read, authenticated write
    match /releases/{document} {
      // Anyone can read releases (for public website)
      allow read: if true;
      
      // Only authenticated users can create, update, or delete releases
      allow create, update, delete: if request.auth != null;
    }
    
    // Users collection (if you add user profiles later)
    match /users/{userId} {
      // Users can only read/write their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Admin-only collections (if you add admin-specific data)
    match /admin/{document} {
      // Only authenticated users can access admin data
      allow read, write: if request.auth != null;
    }
    
    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
